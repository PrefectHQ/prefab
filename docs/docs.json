{
  "$schema": "https://mintlify.com/docs.json",
  "appearance": {
    "default": "system",
    "strict": false
  },
  "background": {
    "decoration": "gradient"
  },
  "colors": {
    "dark": "#f72585",
    "light": "#4cc9f0",
    "primary": "#2d00f7"
  },
  "contextual": {
    "options": [
      "copy",
      "view"
    ]
  },
  "description": "Build dynamic UIs from Python. A JSON DSL compiled to React.",
  "errors": {
    "404": {
      "description": "This component doesn't exist.",
      "redirect": false,
      "title": "Not found."
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/jlowin/prefab",
      "website": "https://www.prefect.io"
    }
  },
  "interaction": {
    "drilldown": false
  },
  "name": "Prefab",
  "navbar": {
    "links": [
      {
        "href": "https://github.com/jlowin/prefab",
        "icon": "github",
        "label": ""
      }
    ]
  },
  "navigation": {
    "anchors": [
      {
        "anchor": "Components",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "apps/overview"
            ]
          },
          {
            "group": "Patterns",
            "pages": [
              "apps/patterns/interactivity",
              "apps/patterns/forms",
              "apps/patterns/data-display",
              "apps/patterns/confirmation"
            ]
          },
          {
            "group": "Actions",
            "pages": [
              "apps/actions",
              "apps/actions/set-state",
              "apps/actions/open-link"
            ]
          },
          {
            "group": "MCP Actions",
            "pages": [
              "apps/actions/call-tool",
              "apps/actions/send-message",
              "apps/actions/update-context"
            ]
          },
          {
            "group": "Layout",
            "pages": [
              "apps/components/layout",
              "apps/components/foreach",
              "apps/components/pages"
            ]
          },
          {
            "group": "Components",
            "pages": [
              "apps/components/accordion",
              "apps/components/alert",
              "apps/components/badge",
              "apps/components/button",
              "apps/components/button-group",
              "apps/components/calendar",
              "apps/components/card",
              "apps/components/checkbox",
              "apps/components/code",
              "apps/components/data-table",
              "apps/components/date-picker",
              "apps/components/dialog",
              "apps/components/image",
              "apps/components/input",
              "apps/components/label",
              "apps/components/markdown",
              "apps/components/popover",
              "apps/components/progress",
              "apps/components/radio",
              "apps/components/select",
              "apps/components/separator",
              "apps/components/slider",
              "apps/components/switch",
              "apps/components/table",
              "apps/components/tabs",
              "apps/components/textarea",
              "apps/components/tooltip",
              "apps/components/typography"
            ]
          }
        ],
        "icon": "palette"
      }
    ]
  },
  "seo": {
    "indexHiddenPages": false
  },
  "theme": "quill"
}
